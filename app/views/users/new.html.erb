<div class="container">
  <div class="login">
    <%= form_for @user, html:{class:'form-signin'} do |f| %>
      <h2 class="form-signin-heading">Register</h2>

      <%= f.label :first_name, html:{class:"sr-only"} %>
      <%= f.text_field :first_name,class:'form-control', placeholder: "First Name" %>

      <%= f.label :last_name, html:{class:"sr-only"} %>
      <%= f.text_field :last_name,class:'form-control', placeholder: "Last Name" %>

      <%= f.label :email, html:{class:"sr-only"} %>
      <%= f.email_field :email,id:'inputEmail',class:'form-control', placeholder: "Email address" %>

      <%= f.label :password, html:{class:"sr-only"} %>
      <%= f.password_field :password,id:'inputPassword',class:'form-control', placeholder: "Password" %>
      <%= f.password_field :password2,id:'inputPassword',class:'form-control', placeholder: "Verify Password" %>
      <div class="checkbox">
        <label>
          <input type="checkbox" value="remember-me"> Remember me
        </label>
      </div>
        <%= f.submit 'Submit',class:'btn btn-lg btn-primary btn-block' %>
    <% end %>
    <% if @errors %>
      <% @errors.each do |msg| %>
        <div class="errors">
          <p><%= msg %></p>
        </div>
      <% end %>
    <% end %>
  </div>
</div>