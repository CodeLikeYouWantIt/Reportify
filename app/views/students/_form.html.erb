<%= form_for @student, html:{class:'form-signin'} do |f| %>
  <% if @student.save === false %>
    <h2 class="form-signin-heading">Add Student</h2>
  <% else %>
    <h2 class="form-signin-heading">Edit Student</h2>
  <% end %>


  <%= f.label :first_name,class:"sr-only" %>
  <%= f.text_field :first_name,class:'form-control', placeholder: "First Name" %>

  <%= f.label :last_name,class:"sr-only" %>
  <%= f.text_field :last_name,class:'form-control', placeholder: "Last Name" %>
  <h4 class="form-signin-heading">Who is the Mom/Dad?</h4>
  <% parents = @parents.map { |parent| [parent.first_name + " " + parent.last_name] } %>
  <%= select_tag(:parent, options_for_select(parents) ) %>
  <%= f.submit 'Submit',class:'btn btn-lg btn-primary btn-block' %>
<% end %>